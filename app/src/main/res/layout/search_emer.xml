        android:layout_height="70dp"

        android:gravity="center"
        android:orientation="horizontal">
        <Spinner
            android:id="@+id/emer_choice"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:entries="@array/city">
        </Spinner>

        <Button
