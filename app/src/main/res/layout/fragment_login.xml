<?xml version="1.0" encoding="UTF-8"?>

<RelativeLayout android:paddingBottom="30dp" android:paddingRight="20dp" android:paddingLeft="20dp" android:background="@drawable/uilogin" android:layout_height="fill_parent" android:layout_width="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_height="match_parent" android:layout_width="match_parent" android:orientation="vertical" android:gravity="center_vertical">

        <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:textColor="#FFFFFF" android:textSize="22sp" android:layout_marginBottom="10dp" android:text="Sign In"/>

        <EditText android:background="#aae7e4e4" android:layout_height="wrap_content" android:layout_width="fill_parent" android:layout_marginBottom="10dp" android:singleLine="true" android:padding="10dp" android:maxLength="12" android:hint="아이디" android:id="@+id/login_id"/>

        <EditText android:background="#aae7e4e4" android:layout_height="wrap_content" android:layout_width="fill_parent" android:layout_marginBottom="10dp" android:singleLine="true" android:padding="10dp" android:maxLength="12" android:hint="패스워드" android:id="@+id/login_pw" android:inputType="textPassword"/>


        <LinearLayout android:layout_height="0px" android:layout_width="fill_parent" android:orientation="horizontal">

            <CheckBox android:layout_height="wrap_content" android:layout_width="fill_parent" android:layout_gravity="center" android:layout_alignParentRight="true"/>


        </LinearLayout>

        <Button
            android:background="#996f6f6f"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            android:id="@+id/login"
            android:onClick="checkLogin"
            android:text="Login"
            android:layout_marginTop="30dp"/>

        <Button
            android:background="#996f6f6f"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="10dp"
            android:textSize="22sp"
            android:textStyle="bold"
            android:id="@+id/btn_join"
            android:text="회원가입"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <Button
            android:background="#6f6f6f"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold"
            android:id="@+id/btn_find_id"
            android:text="아이디찾기"/>

        <Button
            android:background="#6f6f6f"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold"
            android:id="@+id/btn_find_pw"
            android:text="비밀번호찾기"/>
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>