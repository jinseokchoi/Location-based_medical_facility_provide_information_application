<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:state_pressed="true">
        <shape >
            <solid android:color="#b9bbbb"/>
            <stroke
                android:width="0.7dp"
                android:color="#a4b3b3"/>
            <corners
                android:radius="3dp"/>
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape >
            <stroke
                android:width="0.7dp"
                android:color="#a4b3b3"/>
            <gradient
                android:angle="270"
                android:endColor="#a2a2a2"
                android:startColor="#eaebeb"/>
            <corners
                android:radius="3dp"/>
        </shape>
    </item>
</selector>
